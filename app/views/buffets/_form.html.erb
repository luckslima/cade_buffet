<%= form_with(model: @buffet) do |f| %>

  <div class="row">

    <div class="col-md-6">

      <div class="mb-3">
        <%= f.label :brand_name, class: 'form-label' %>
        <%= f.text_field :brand_name, class: 'form-control' %>
      </div>

      <div class="mb-3">
        <%= f.label :corporate_name, class: 'form-label' %>
        <%= f.text_field :corporate_name, class: 'form-control' %>
      </div>

      <div class="mb-3">
        <%= f.label :registration_number, class: 'form-label' %>
        <%= f.text_field :registration_number, class: 'form-control' %>
      </div>

      <div class="mb-3">
        <%= f.label :phone, class: 'form-label' %>
        <%= f.text_field :phone, class: 'form-control' %>
      </div>

      <div class="mb-3">
        <%= f.label :email, class: 'form-label' %>
        <%= f.text_field :email, class: 'form-control' %>
      </div>

      <div class="mb-4">
        <%= f.label :payment_methods, "Meios de Pagamento", class: 'form-label' %><br>
        <% PaymentMethod.all.each do |method| %>
          <div class="form-check">
            <%= check_box_tag "buffet[payment_method_ids][]", method.id, @buffet.payment_methods.include?(method), id: "buffet_payment_method_ids_#{method.id}", class: 'form-check-input' %>
            <%= label_tag "buffet_payment_method_ids_#{method.id}", method.name, class: 'form-check-label' %>
          </div>
        <% end %>
      </div>

    </div>

    <div class="col-md-6">

      <div class="mb-3">
        <%= f.label :address, class: 'form-label' %>
        <%= f.text_field :address, class: 'form-control' %>
      </div>

      <div class="mb-3">
      <%= f.label :district, class: 'form-label' %>
      <%= f.text_field :district, class: 'form-control' %>
      </div>

      <div class="mb-3">
        <%= f.label :city, class: 'form-label' %>
        <%= f.text_field :city, class: 'form-control' %>
      </div>

      <div class="mb-3">
        <%= f.label :state, class: 'form-label' %>
        <%= f.text_field :state, class: 'form-control' %>
      </div>

      <div class="mb-3">
        <%= f.label :zip_code, class: 'form-label' %>
        <%= f.text_field :zip_code, class: 'form-control' %>
      </div>

      <div class="mb-3">
        <%= f.label :description, class: 'form-label' %>
        <%= f.text_area :description, class: 'form-control', rows: 5 %>
      </div>

    </div>

  </div>

  <%= f.hidden_field :user_id, value: current_user.id %>

  <%= f.submit 'Salvar Buffet', class: 'btn btn-primary' %>

<% end %>