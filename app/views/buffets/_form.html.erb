<%= form_with(model: @buffet) do |f| %>

    <div>
        <%= f.label :brand_name %>
        <%= f.text_field :brand_name %>
    </div>

    <div>
        <%= f.label :corporate_name %>
        <%= f.text_field :corporate_name %>
    </div>

    <div>
        <%= f.label :registration_number %>
        <%= f.text_field :registration_number %>
    </div>

    <div>
        <%= f.label :phone %>
        <%= f.text_field :phone %>
    </div>

    <div>
        <%= f.label :email %>
        <%= f.text_field :email %>
    </div>

    <div>
        <%= f.label :address %>
        <%= f.text_field :address %>
    </div>

    <div>
        <%= f.label :district %>
        <%= f.text_field :district %>
    </div>

    <div>
        <%= f.label :city %>
        <%= f.text_field :city %>
    </div>

    <div>
        <%= f.label :state %>
        <%= f.text_field :state %>
    </div>

    <div>
        <%= f.label :zip_code %>
        <%= f.text_field :zip_code %>
    </div>

    <div>
        <%= f.label :description %>
        <%= f.text_field :description %>
    </div>

    <div>
        <%= f.label :payment_methods, "Meios de Pagamento" %><br>
        <% PaymentMethod.all.each do |method| %>
        <%= check_box_tag "buffet[payment_method_ids][]", method.id, @buffet.payment_methods.include?(method), id: "buffet_payment_method_ids_#{method.id}" %>
        <%= label_tag "buffet_payment_method_ids_#{method.id}", method.name %><br>
        <% end %>
    </div>

    <%= f.hidden_field :user_id, value: current_user.id %>

    <%= f.submit %>

<% end %>
