<!DOCTYPE html>
<html>
  <head>
    <title>CadeBuffet</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application" %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  </head>

  <body>
    <header>
      <h1><%= link_to("CadÃª Buffet?", root_path) %></h1>
      <nav>
        
       <% if user_signed_in? %>
          <% if current_user.is_buffet_owner %>
            <% if current_user.buffet %>
              <%= link_to 'Meu buffet', buffet_path(current_user.buffet) %> | 
              <%= link_to 'Pedidos', orders_path %>
            <% else %>
              <%= link_to 'Cadastrar Buffet', new_buffet_path %> |
            <% end %>
            <%= button_to 'Sair', destroy_user_session_path, method: :delete %>
          <% else %>
            <%= current_user.name %> |
            <%= link_to 'Meus Pedidos', orders_path %> |
            <%= button_to 'Sair', destroy_user_session_path, method: :delete %>  
            <br>
            <%= form_with(url: search_buffets_path, method: :get, id: 'search-form') do |f|%>
              <%= f.label :query, 'Buscar Buffet' %>
              <%= f.text_field :query %>
              <%= f.submit 'Buscar' %>
            <%end%>
          <% end %>
        <% else %>
          <%= link_to 'Cadastrar', new_user_registration_path %> |
          <%= link_to 'Entrar', new_user_session_path %> |
          <br>
          <%= form_with(url: search_buffets_path, method: :get, id: 'search-form') do |f|%>
             <%= f.label :query, 'Buscar Buffet' %>
             <%= f.text_field :query %>
             <%= f.submit 'Buscar' %>
          <%end%>
        <% end %>

      </nav>
    </header>
    <main>
      <div>
        <p class="notice"><%= notice %></p>
        <p class="alert"><%= alert %></p>
      </div>

      <%= yield %>
    </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>
