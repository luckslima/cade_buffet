<h1>Criando um Pedido</h1>

<h2><%= @event_type.name %></h2>

<%= form_with(model: [@event_type, @order]) do |f|%>

    <div>
      <%= f.label :event_date %>
      <%= f.date_field :event_date %>
    </div>

    <div>
      <%= f.label :number_of_guests %>
      <%= f.number_field :number_of_guests %>
    </div>

    <% if @event_type.location_type == 'off_site' %>
        <div>
            <%= f.label :address %>
            <%= f.text_field :address %>
        </div>      
    <% end %>

    <div>
      <%= f.label :details %> <br>
      <%= f.text_area :details %>
    </div>

    <%= f.submit %>

<% end %>