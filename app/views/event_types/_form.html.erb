<%= form_with(model:@event_type) do |f| %>

    <div class="mb-3">
      <%= f.label :name, class: 'form-label' %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>

    <div class="mb-3">
      <%= f.label :description, class: 'form-label' %>
      <%= f.text_field :description, class: 'form-control' %>
    </div>

    <div class="mb-3">
      <%= f.label :min_guests, class: 'form-label' %>
      <%= f.number_field :min_guests, class: 'form-control' %>
    </div>

    <div class="mb-3">
      <%= f.label :max_guests, class: 'form-label' %>
      <%= f.number_field :max_guests, class: 'form-control' %>
    </div>

    <div class="mb-3">
      <%= f.label :duration_minutes, class: 'form-label' %>
      <%= f.number_field :duration_minutes, class: 'form-control' %>
    </div>

    <div class="mb-3">
      <%= f.label :menu_description, class: 'form-label' %>
      <%= f.text_field :menu_description, class: 'form-control' %>
    </div>
    
    <div class="mb-3 form-check">
      <%= f.label :alcohol_included, class: 'form-check-label' %>
      <%= f.check_box :alcohol_included, class: 'form-check-input' %>
    </div>

    <div class="mb-3 form-check">
      <%= f.label :decoration_included, class: 'form-check-label' %>
      <%= f.check_box :decoration_included, class: 'form-check-input' %>
    </div>

    <div class="mb-3 form-check">
      <%= f.label :parking_available, class: 'form-check-label' %>
      <%= f.check_box :parking_available, class: 'form-check-input' %>
    </div>

    <div class="mb-3">
      <%= f.label :location_type, class: 'form-label' %>
      <%= f.select :location_type, [['No local', 'on_site'], ['Em outro local', 'off_site']], {}, { class: 'form-control' } %>
    </div>

    <div class="mb-3">
      <%= f.label :image, class: 'form-label' %>
      <%= f.file_field :image, class: 'form-control' %>
    </div>

    <div class="mt-4">
      <%= f.submit 'Salvar', class: 'btn btn-primary' %>
    </div>

<% end %>